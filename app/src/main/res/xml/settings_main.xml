<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <EditTextPreference
        android:defaultValue="@string/settings_articles_loaded_default"
        android:inputType="numberDecimal"
        android:key="@string/settings_articles_loaded_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_articles_loaded_label" />

    <ListPreference
        android:defaultValue="@string/settings_order_by_default"
        android:entries="@array/settings_order_by_labels"
        android:entryValues="@array/settings_order_by_values"
        android:key="@string/settings_order_by_key"
        android:title="@string/settings_order_by_label" />
</PreferenceScreen>